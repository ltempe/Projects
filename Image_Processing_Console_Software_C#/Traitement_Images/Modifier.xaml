<Window x:Class="Traitement_Images.Modifier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traitement_Images"
        mc:Ignorable="d"
        Title="Modifier" Height="450" Width="800">
    <Grid>

        <TextBlock Text="Traitement d'images" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Rockwell Extra Bold" FontSize="26" FontWeight="Bold"  />
        <WrapPanel Margin="35">
                <Button x:Name="traitement" Content="Traiter une image" Height="60" Width="215" FontSize="22" Margin="20"/>
                <Button x:Name="decoder" Content="Décoder une image" Height="60" Width="215" FontSize="22" Margin="20"/>
                <Button x:Name="fractale" Content="Créer des fractales" Height="60" Width="215" FontSize="22" Margin="20"/>
                <Button x:Name="sortie" Content="Afficher les images" Height="60" Width="215" FontSize="22" Margin="20"/>
                <Button x:Name="qrcode" Content="Créer un QR Code" Height="60" Width="215" FontSize="22" Margin="20"/>
                <Button x:Name="qrdecode" Content="Décoder un QR Code" Height="60" Width="215" FontSize="22" Margin="20"/>
            </WrapPanel>
        </Grid>
</Window>
